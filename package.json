{
  "type": "module",
  "name": "salopbar",
  "repository": {
    "directory": "salopbar",
    "url": "https://github.io/HelenoSalgado",
    "type": "git"
  },
  "keywords": [
    "hyprland",
    "arch-linux",
    "status-bar",
    "gjs",
    "ags",
    "typescript",
    "gtk4",
    "wayland",
    "mpris"
  ],
  "description": "Barra de status moderna para Hyprland e Arch Linux, construÃ­da com AGS e TypeScript.",
  "version": "0.0.1",
  "author": {
    "name": "Heleno Salgado",
    "url": "https://heleno.dev"
  },
  "engines": {
    "gjs": ">=1.79.0"
  },
  "os": [
    "linux"
  ],
  "bundleDependencies": [
    "esbuild"
  ],
  "dependencies": {
    "esbuild": "^0.25.9",
    "ags": "*"
  },
  "scripts": {
    "build:install": "npm install && arch-meson build && meson install -C build",
    "build:test": "meson setup --prefix \"$(pwd)/dist\" --reconfigure build && meson install -C build",
    "start:dev": "nodemon startdev.js"
  },
  "nodemonConfig": {
    "ext": "tsx,ts,css",
    "watch": [
      "src/"
    ],
    "delay": "2000"
  },
  "devDependencies": {
    "@eslint/js": "latest",
    "@girs/adw-1": "latest",
    "@types/node": "^24.3.0",
    "eslint": "latest",
    "nodemon": "^3.1.10",
    "typescript": "latest",
    "typescript-eslint": "latest"
  }
}
